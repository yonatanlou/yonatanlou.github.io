        {#- Add an arbitrary string to the bundle #}{%- css %}/* This is an arbitrary CSS string added to the bundle */
        {% endcss %}
        {#- Add the contents of a file to the bundle #}{%- css %}{% include "public/css/index.css" %}
        {% endcss %}
        {#- Or you can add from node_modules #}
        {# {%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %} #}{#- Render the CSS bundle using inlined CSS (for the fastest site performance in production) #}
        <style>
        {% getBundle "css" %}</style>
        {#- Renders the CSS bundle using a separate file, if you can't set CSP directive style-src: 'unsafe-inline' #}
        {#- <link rel="stylesheet" href="{% getBundleFileUrl "css" %}"> #}
